# SerTecApp - Environment Configuration
# Copiar este archivo como .env y configurar valores

# ======================
# DATABASE
# ======================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sertecapp
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# ======================
# APPLICATION
# ======================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/sertecapp/backend
APP_TIMEZONE=America/Argentina/Buenos_Aires

# ======================
# JWT AUTHENTICATION
# ======================
# Generar con: openssl rand -base64 32
JWT_SECRET=cambiar_esto_por_un_valor_aleatorio_seguro_de_al_menos_32_caracteres
JWT_EXPIRES_IN=86400
JWT_REFRESH_EXPIRES_IN=604800

# ======================
# CORS
# ======================
# Separar múltiples orígenes con comas
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://sertecapp.vercel.app
CORS_ALLOW_CREDENTIALS=true

# ======================
# API RATE LIMITING
# ======================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# ======================
# LOGGING
# ======================
LOG_ENABLED=true
LOG_LEVEL=debug
LOG_PATH=../logs/app.log

# ======================
# TANGO INTEGRATION
# ======================
TANGO_API_URL=https://api.tango.com
TANGO_API_KEY=
TANGO_ENABLED=false

# ======================
# EMAIL (futuro)
# ======================
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@sertecapp.com
MAIL_FROM_NAME=SerTecApp

# ======================
# RAILWAY PRODUCTION (autodetected)
# ======================
# Railway setea estas variables automáticamente:
# RAILWAY_ENVIRONMENT=production
# DATABASE_URL=mysql://user:pass@host:port/dbname
# 
# Si existe DATABASE_URL, se parsea automáticamente
